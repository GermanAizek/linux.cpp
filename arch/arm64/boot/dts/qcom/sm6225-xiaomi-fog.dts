/dts-v1/;

#include "sm6225.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/input/gpio-keys.h>

/ {
	/* required for bootloader to select correct board */
	qcom,board-id = <0x60022 0x00>;
	qcom,msm-id = <0x206 0x10000>;

	model = "Xiaomi Redmi 10C";
	compatible = "xiaomi,fog", "qcom,sm6225";
	chassis-type = "handset";

	chosen {
		bootargs = "earlycon=tty0 console=tty0 PMOS_NOSPLASH clk_ignore_unused pd_ignore_unused";

		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		framebuffer0: framebuffer@5c000000 {
			compatible = "simple-framebuffer";
			reg = <0 0x5c000000 0 (1650 * 720 * 4)>;
			width = <720>;
			height = <1650>;
			stride = <(720 * 4)>;
			format = "a8r8g8b8";
		};
	};
};
